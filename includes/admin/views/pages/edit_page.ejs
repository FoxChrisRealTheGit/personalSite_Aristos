<%- include("../_layouts/adminheader") %>
    <div class="admin-background-full"></div>
    <h2 class="admin-page-title">Edit a page</h2>
    <div>
        <button class="btn btn-primary">
            <a class="btn-text" href="/admin/pages">Back to pages</a>
            <button class="btn btn-primary">
                <a class="btn-text" href="/admin/pages/edit-dynamic-builder/<%= id %>">Dynamic Builder</a>
            </button>
        </button>
    </div>
    <br>
    <br>

    <form id="goodFormName" method="post" action="/admin/pages/edit-page/<%= id %>">

        <%- include("../../../AristosTextEditor/AristosTextEditor") %>
            <div class="form-options-bottom-group">
            <div class="form-options">
                <div class="form-group">
                    <label for="">Title</label>
                    <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">

                </div>

                <div class="form-group">
                    <label for="">Slug</label>
                    <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">

                </div>
                <div class="form-group">
                    <label for="">Parent</label>
                    <select name="parent" class="form-control">
                        <% pages.forEach(function(page){ %>
                            <option value="<%= page.slug %>" <% if (page.slug === selectedCat) { %>
                                selected = "selected"
                                <% } %>
                                    >
                                <%= page.title %>
                            </option>
                            <% }); %>
                    </select>
                </div>
                <div class="form-group">
                        <label for="">Author</label>
                        <input type="text" class="form-control" name="author" value="<%= author %>" placeholder="Author">

                    </div>

            </div>
            <div class="second-form-options">
                <div class="form-group">
                    <label for="">Meta Description</label>
                    <textarea class="disabled-resize" rows="4" name="description"  placeholder="Place a brief description of this page. Max of 320 characters including spaces."
                        maxlength="320"><%= description %></textarea>
                </div>
                <div class="form-group">
                    <label for="">Meta Keywords</label>
                    <textarea class="disabled-resize" rows="4" name="keywords" placeholder="Place your keywords seperated by a comma. Max of 300 characters. EX. neat site, neater page, neatest person"
                        maxlength="300"><%= keywords %></textarea>
                </div>

            </div>
            </div>


            <button id="mostAmazingButton" class="btn-submit btn-text">Submit</button>
    </form>
    <%- include("../_layouts/adminfooter") %>