<% include ../_layouts/adminheader %>
<div class="admin-background-full"></div>
<h2 class="admin-page-title">Edit a Video</h2>
<button class="btn btn-primary">
    <a class="btn-text" href="/admin/add-media">Back to Add Media</a>
</button>


<br>
    <br>

    <form method="post" action="/admin/add-media/edit-video">
        <div class="form-options">
        <div class="form-group">
            <label for="">Title</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">

        </div>

        <div class="form-group">
            <label for="">Alt</label>
            <input type="text" class="form-control" name="alt" value="<%= alt %>" placeholder="Alt Tag">

        </div>

        <div class="form-group">
            <label for="">Category</label>
            <select name="category" class="form-control">
                <% categories.forEach(function(category){ %>
                    <option value="<%= category.title %>">
                        <%= category.title %>
                    </option>
                    <% }); %>
            </select>
        </div>
</div>
        <button class="btn-submit btn-text">Submit</button>
    </form>
<% include ../_layouts/adminfooter %>