<%- include("../../_layouts/adminheader") %>
<div class="admin-background-full"></div>
    <h2 class="admin-page-title">Media Categories</h2>
    <div>
        <button class="btn btn-primary">
            <a class="btn-text" href="/admin/add-media/upload-image">Upload an Image</a>
        </button>
        <button class="btn btn-primary">
            <a class="btn-text" href="/admin/add-media/upload-video">Upload a Video</a>
        </button>
        <button class="btn btn-primary">
            <a class="btn-text" href="/admin/media-categories/add-media-category">Add a Category</a>
        </button>
    </div>
    <br>
    <br>
    <% if (count > 0) { %>
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(function(cat) { %>
                    <tr>
                        <td>
                            <%= cat.title %>
                        </td>
                        <% if (cat.title == "General") { %>
                            <td>

                            </td>
                            <% } else { %>
                                <td class="edit-table-stuffs">
                                    <a href="/admin/media-categories/edit-media-category/<%= cat._id %>">Edit</a>
                                </td>
                                <% } %>
                                    <% if (cat.title == "General") { %>
                                        <td>

                                        </td>
                                        <% } else { %>
                                            <td class="delete-table-stuffs">
                                                <a class="confirmDeletion" href="/admin/media-categories/delete-media-category/<%= cat._id %>">Delete</a>
                                            </td>
                                            <% } %>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <% } else { %>
            <h3 class="none-of-something">There are no product categories, you should make one.</h3>
            <% } %>
                <%- include("../../_layouts/adminfooter") %>