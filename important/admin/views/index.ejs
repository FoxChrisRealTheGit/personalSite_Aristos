<% include ./_layouts/adminheader %>
<h2 class="admin-page__main-title">Dashboard</h2>
<% include _layouts/messages/messages %>
<div class="blocks-holder">
    <div class="admin-blocks">
        <h4>
            total site views:
        </h4>
        <h5>
            <%= Math.floor(siteViews) %>
        </h5>
        <h4>
            total page views:
        </h4>
        <h5>
            <%= Math.floor(totalViews/3) %>
        </h5>
    </div>
    <div class="admin-blocks">
        <h4>
            total front-end page views:
        </h4>
        <h5>
            <%= Math.floor(FrontEndViews/3) %>
        </h5>
    </div>
</div>
<div class="blocks-holder">
    <% if(upgradeDashboard.length < 1){ %>
      
    <% }else{ %>
        <% upgradeDashboard.forEach(inceptionLevelPromise=>{ %> 
            <%- inceptionLevelPromise %>  
        <% }) %>
    <% } %>
</div>

<div class="admin-section__dashboard-row--divider">
    <button class="admin-button admin-button--main">
        <a href="/admin/#logs-display">Info Logs</a>
    </button>
    <button class="admin-button admin-button--main">
        <a href="/admin/dashboard/updates/#logs-display">Update Logs</a>
    </button>
    <button class="admin-button admin-button--main">
        <a href="/admin/dashboard/errors/#logs-display">Error Logs</a>
    </button>
    <button class="admin-button admin-button--main">
        <a href="/admin/dashboard/debug/#logs-display">Debug Logs</a>
    </button>
</div>
    <div class="admin-section__dashboard-row">
    <% if(infoLogs.length < 1){ %>
        <div class="admin-section__dashboard-row__notepad"  id="logs-display">
            <h3 class="admin-page__none-of-something">There is nothing in the log...</h3>
        </div>
    <% }else{ %>
    <table class="admin-table" id="logs-display">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Info</th>
            </tr>
        </thead>
        <tbody>
            
            <% infoLogs.forEach((log)=> { %>
            <tr>
                <td><%= log.name %></td>
                <td><%= log.date %></td>
                <td><%= log.info %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% } %>
        <a class="admin-section__dashboard-row__redirect" href="/admin/logs-viewer">See the full log</a>
    </div>
</div>
<% include ./_layouts/adminfooter %>