<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin - <%= appTitle %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
      
    <link rel="stylesheet" href="/styles/main.css">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
</head>
<body>
    <header class="admin-header">
        <nav>
            <a class="admin-header__brand" href="/" target="_blank"><%= appTitle %></a>
            <div class="admin-nav" id="navbarsExampleDefault">
            <h4 class="admin-nav__section-header">basics</h4>
                <ul class="admin-header__basics">
                    <li class="admin-nav__nav-item">
                        <a href="/admin">dashboard</a>
                    </li>
                    <div class="side-dropdown">
                    <li class="admin-nav__nav-item">
                        <a href="/admin/add-media">add media</a>
                    </li>
                    <div class="side-hovered-item" id="">
                            <a class="admin-nav__nav-item" href="/admin/add-media/upload-image">upload image</a>
                            <a class="admin-nav__nav-item" href="/admin/add-media/upload-video">upload video</a>
                            <a class="admin-nav__nav-item" href="/admin/media-categories/add-media-category">add category</a>
                            <a class="admin-nav__nav-item" href="/admin/media-categories">see all categories</a>
                        </div>
                    </div>
                    <div class="side-dropdown">
                        <li class="admin-nav__nav-item">
                            <a href="/admin/pages">pages</a>
                        </li>
                        <div class="side-hovered-item" id="">
                            <a class="admin-nav__nav-item" href="/admin/pages/add-page">add page</a>
                        </div>
                    </div>
                    <div class="side-dropdown">
                        <li class="admin-nav__nav-item">
                            <a href="/admin/template-builder">templates</a>
                        </li>
                        <div class="side-hovered-item" id="">
                            <a class="admin-nav__nav-item" href="/admin/template-builder/add-basic">add template</a>
                            <a class="admin-nav__nav-item" href="/admin/template-builder/builder">drag and drop</a>
                        </div>
                    </div>
                </ul>
                <h4 class="admin-nav__section-header">upgrades</h4>
                <ul class="admin-header__upgrades">
                <% upgrades.forEach(infos=>{ %>
                    <% if(infos.dropdownCategories.length > 0) { %>
                        <div class="side-dropdown">
                            <li class="admin-nav__nav-item">
                                <a class="" href="<%= infos.link %>"><%= infos.name %></a>
                            </li>
                            <div class="side-hovered-item" id="">
                                <% infos.dropdownCategories.forEach(dropdown=>{ %>
                                    <a class="admin-nav__nav-item" href="<%= dropdown.link %>"><%= dropdown.name %></a>
                                <% }) %>
                            </div>
                        </div> 
                    <% } else { %>
                        <li class="admin-nav__nav-item">
                            <a class="" href="<%= infos.link %>"><%= infos.name %></a>
                        </li>
                    <% } %>
                <% }) %>
                </ul>
                <h4 class="admin-nav__section-header">options</h4>
                <ul class="admin-header__configuration">
                    <div class="side-dropdown">
                        <li class="admin-nav__nav-item">
                            <a href="/admin/user-controls">users</a>
                        </li>
                        <div class="side-hovered-item" id="">
                            <a class="admin-nav__nav-item" href="/admin/user-controls/add-admin">add new member</a>
                            <a class="admin-nav__nav-item" href="">add existing member</a>
                            <a class="admin-nav__nav-item" href="">new user role</a>
                            <a class="admin-nav__nav-item" href="">all user roles</a>
                        </div>
                    </div>
                    <li class="admin-nav__nav-item">
                        <a href="/admin/settings">settings</a>
                    </li>
                    <li class="admin-nav__nav-item">
                        <a href="/admin/updater">update</a>
                    </li>
                </ul>
                <ul class="admin-header__marketplace">
                    <li class="admin-nav__nav-item admin-nav__nav-item--success">
                        <a href="https://aristosbuilder.com/" target="_blank">marketplace</a>
                    </li>
                </ul>
                <ul class="admin-header__logout">
                    <li class="admin-nav__nav-item admin-nav__nav-item--danger">
                        <a href="/users/logout">logout</a>
                    </li>
                </ul>
                <div class="admin-footer">
                    <p>&COPY Aristos CMS - <%= aristosVersion %></p>
                    <p>Node Version</p>
                    <a class="admin-footer__link" href="http://foxdesignagency.com/" target="_blank">Fox Design Agency</a>
                </div>
            </div>
        </nav>
    </header>
<main role="main" class="admin-page">
    <div class="admin-page__full-background"></div>