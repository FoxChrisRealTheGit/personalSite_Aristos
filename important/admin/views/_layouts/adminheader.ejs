                    <% if(projectManagementExists) { %>
                    <div class="side-dropdown">
                        <li class="admin-nav__nav-item">
                            <a href="/admin/project-management">project management</a>
                        </li>
                        <div class="side-hovered-item" id="">
                            <a class="admin-nav__nav-item" href="/admin/project-management/add-task">add new task</a>
                            <a class="admin-nav__nav-item" href="">add new note</a>
                        </div>
                        </div>
                        <% } %>
                </ul>
                <h4 class="admin-nav__section-header">options</h4>
                <ul class="admin-header__configuration">
                <div class="side-dropdown">
                    <li class="admin-nav__nav-item">
