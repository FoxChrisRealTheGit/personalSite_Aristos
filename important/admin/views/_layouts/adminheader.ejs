                            <a class="admin-nav__nav-item" href="/admin/portfolio-categories/add-portfolio-category">add category</a>
                            <a class="admin-nav__nav-item" href="/admin/portfolio-categories">see all categories</a>
                        </div>
                        </div>
                        <% } %>
                            <% if(productsExists) { %>
                            <div class="side-dropdown">
                                <li class="admin-nav__nav-item">
                                    <a href="/admin/products">products</a>
                                </li>
                                <div class="side-hovered-item" id="">
                                <a class="admin-nav__nav-item" href="">see orders</a>
                            <a class="admin-nav__nav-item" href="/admin/products/add-product">add product</a>
                            <a class="admin-nav__nav-item" href="/admin/product-categories/add-product-category">add category</a>
                            <a class="admin-nav__nav-item" href="/admin/product-categories">see all categories</a>
                            <a class="admin-nav__nav-item" href="">add coupon</a>
                            <a class="admin-nav__nav-item" href="">see all coupons</a>
                        </div>
                        </div>
                                <% } %>
                                    <% if(blogsExists){ %>
                                    <div class="side-dropdown">
                                        <li class="admin-nav__nav-item">
                                            <a href="/admin/blogs">blogs</a>
                                        </li>
                                        <div class="side-hovered-item" id="">
                            <a class="admin-nav__nav-item" href="/admin/blogs/add-blog">add blog</a>
                            <a class="admin-nav__nav-item" href="/admin/blog-categories/add-blog-category">add category</a>
                            <a class="admin-nav__nav-item" href="/admin/blog-categories">see all categories</a>
                            <a class="admin-nav__nav-item" href="/admin/blog-categories">see all comments</a>
