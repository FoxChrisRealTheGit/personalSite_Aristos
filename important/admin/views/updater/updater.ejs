<%- include("../_layouts/adminheader") %>
    <h2 class="admin-page__main-title">aristos updater</h2>
    <% include ../_layouts/messages/messages %>
    <% if(theUser.userRole.allThethings === "yes" || theUser.userRole.canEdit === "yes"){ %>
        <button class="admin-button admin-button--main">
            <a href="/admin/updater/make-update/core">Update Core</a>
        </button>
        <button class="admin-button admin-button--main">
            <a href="/admin/updater/make-update/expansions">Update Expansions</a>
        </button>
        <button class="admin-button admin-button--main">
            <a href="/admin/updater/make-update/theme">Update Theme</a>
        </button>
    <% } %>


    <% if(infoLogs.length < 1){ %>
        <div class="admin-section__dashboard-row__notepad"  id="logs-display">
            <h3 class="admin-page__none-of-something">There is nothing in the log...</h3>
        </div>
    <% }else{ %>  
        <table class="admin-table" id="logs-display">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Info</th>
                </tr>
            </thead>
            <tbody>
                <% infoLogs.forEach((log)=> { %>
                <tr>
                    <td><%= log.name %></td>
                    <td><%= log.date %></td>
                    <td><%= log.info %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>

<%- include("../_layouts/adminfooter") %>
        