<%- include("../../../../../includes/admin/views/_layouts/adminheader") %>
<div class="admin-background-full"></div>
    <h2 class="admin-page-title">Blog Categories</h2>
    <div>

        <button class="btn btn-primary">
            <a class="btn-text" href="/admin/blogs/add-blog">Add a new blog</a>
        </button>
        <button class="btn btn-primary">
            <a class="btn-text" href="/admin/blog-categories/add-blog-category">Add a New Category</a>
        </button>
    </div>
    <br>
    <br>
    <% if (count > 0) { %>
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(function(cat) { %>
                    <tr>
                        <td>
                            <%= cat.title %>
                        </td>
                        <td  class="edit-table-stuffs"> 
                            <a href="/admin/blog-categories/edit-blog-category/<%= cat._id %>">Edit</a>
                        </td>
                        <% if (cat.title == "General") { %>
                            <td></td>
                            <% } else { %>
                                <td  class="delete-table-stuffs">
                                    <a class="confirmDeletion" href="/admin/blog-categories/delete-blog-category/<%= cat._id %>">Delete</a>
                                </td>
                                <% } %>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <% } else { %>
            <h3  class="none-of-something">There are no blog categories, you should make one.</h3>
            <% } %>
                <%- include("../../../../../includes/admin/views/_layouts/adminfooter") %>